                        <select>
                            <option>樹木</option>
                            <option>百花蜜</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th>養蜂家</th>
                    <td>
                        <input type="text" value="ロバート・チャールズ氏">
                    </td>
                </tr>
                <tr>
                    <th>採れた場所</th>
                    <td>
                        <input type="text" value="オーストラリア タスマニア島・ターカイン">
